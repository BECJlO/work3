mixin fon()
  +b.SECTION.fon.container
    .title
      H2 Отзывы клиентов
    .reviews_main
      UL.nav.nav-tabs.container.p-0(id="myTab", role="tablist")
        LI.nav-item
          A(id="video-tab", data-toggle="tab", href="#video", role="tab", aria-controls="video", aria-selected="true").nav-link.active Видеоотзывы
        LI.nav-item
          A(id="form-tab", data-toggle="tab", href="#form", role="tab", aria-controls="form", aria-selected="false").nav-link Анкеты
        LI.nav-item
          A(id="printed-tab", data-toggle="tab", href="#printed", role="tab", aria-controls="printed", aria-selected="false").nav-link Печатные
      .tab-content(id="myTabContent")
        .reviews_video.container.tab-pane.fade.show.active(id="video" role="tabpanel" aria-labelledby="video-tab")
          .video_slide
            .videoWrapper.yt_video1
              IMG(data-lazy="img/video1.jpg" alt="video" width="100%")
            P.video_f Ремонт квартиры на ул. Новой, г. Реутов, Московская обл.
          .video_slide
            .videoWrapper.yt_video2
              IMG(data-lazy="img/video2.jpg" alt="video" width="100%")
            P.video_f Ремонт квартиры на Ново-Молоковском б-ре, г. Москва
          .video_slide
            .videoWrapper.yt_video3
              IMG(data-lazy="img/video3.jpg" alt="video" width="100%")
            P.video_f Ремонт квартиры на ул. Юбилейной, г. Мытищи, Московская обл.
        .reviews_forms.container.tab-pane.fade(id="form" role="tabpanel" aria-labelledby="form-tab")
          .forms_slide
            IMG(data-lazy="upload/forms/form1.jpg" alt="image" data-toggle="modal" data-target="#reviewsFormsModal")
          .forms_slide
            IMG(data-lazy="upload/forms/form2.jpg" alt="image" data-toggle="modal" data-target="#reviewsFormsModal")
          .forms_slide
            IMG(data-lazy="upload/forms/form3.jpg" alt="image" data-toggle="modal" data-target="#reviewsFormsModal")
          .forms_slide
            IMG(data-lazy="upload/forms/form4.jpg" alt="image" data-toggle="modal" data-target="#reviewsFormsModal")
          .forms_slide
            IMG(data-lazy="upload/forms/form5.jpg" alt="image" data-toggle="modal" data-target="#reviewsFormsModal")
